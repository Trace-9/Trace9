# ============================================
# TRACE9 ORACLE - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# SOLANA CONFIGURATION
# ============================================

# Solana RPC endpoint (Mainnet)
# Options:
# - Mainnet: https://api.mainnet-beta.solana.com
# - Devnet: https://api.devnet.solana.com
# - Custom RPC: https://your-rpc-endpoint.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Solana network cluster
# Options: mainnet-beta, devnet, testnet
SOLANA_CLUSTER=mainnet-beta

# Solana wallet keypair path (for deployment)
# Default: ~/.config/solana/id.json
# Or provide base58 encoded private key
SOLANA_WALLET_PATH=~/.config/solana/id.json

# ============================================
# PROGRAM CONFIGURATION
# ============================================

# Trace9 Program ID (update after deployment)
TRACE9_PROGRAM_ID=trc9oRacL3mP9vK8JqF2nH5xY7wD4bC6eA8g

# Oracle provider public key (receives fees, answers questions)
# Can be same as deployer address or separate wallet
ORACLE_PROVIDER_ADDRESS=

# ============================================
# API KEYS (OPTIONAL)
# ============================================

# OpenAI API key (for AI Research Agent - future feature)
OPENAI_API_KEY=

# Optional: External data sources for AI agent
COINGECKO_API_KEY=
NEWS_API_KEY=

# ============================================
# OPERATIONAL SETTINGS (OPTIONAL)
# ============================================

# Auto-updater interval in minutes (default: 5)
UPDATE_INTERVAL_MINUTES=5

# Minimum provider balance before alert (in SOL)
MIN_PROVIDER_BALANCE=0.1

# Transaction confirmation commitment level
# Options: processed, confirmed, finalized
COMMITMENT_LEVEL=confirmed

